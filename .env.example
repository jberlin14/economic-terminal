# Economic Terminal - Environment Configuration
# Copy this file to .env and fill in your API keys
# NEVER commit the .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# For local development (SQLite - no setup required)
DATABASE_URL=sqlite:///./economic_data.db

# For production (PostgreSQL - Render will provide this automatically)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# =============================================================================
# DATA SOURCE API KEYS (All Free Tier)
# =============================================================================

# Alpha Vantage - FX and Stock Data
# Get free key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# FRED - Economic Data from St. Louis Fed
# Get free key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# News API (optional - for additional news sources)
# Get free key: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# Twitter/X API (optional - for Trump monitoring)
# Get key: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# =============================================================================
# EMAIL CONFIGURATION (SendGrid)
# =============================================================================

# SendGrid - Email Delivery Service
# Get free key: https://sendgrid.com/free/ (100 emails/day)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email addresses
SENDGRID_FROM_EMAIL=terminal@yourdomain.com
RECIPIENT_EMAIL=your_work_email@company.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (set to false in production)
DEBUG=true

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Timezone for scheduling (US Eastern for market hours)
TIMEZONE=America/New_York

# Dashboard URL (update after deployment)
DASHBOARD_URL=http://localhost:8000

# =============================================================================
# UPDATE FREQUENCIES (in seconds)
# =============================================================================

# FX rates update interval (300 = 5 minutes)
FX_UPDATE_INTERVAL=300

# Yields update interval (300 = 5 minutes)
YIELDS_UPDATE_INTERVAL=300

# News fetch interval (900 = 15 minutes)
NEWS_UPDATE_INTERVAL=900

# Credit spreads update (3600 = 1 hour, FRED updates daily)
CREDIT_UPDATE_INTERVAL=3600

# =============================================================================
# RISK THRESHOLDS
# =============================================================================

# FX move thresholds (percentage)
FX_RISK_THRESHOLD_HIGH=1.0
FX_RISK_THRESHOLD_CRITICAL=2.0

# Yield curve thresholds (basis points)
YIELD_INVERSION_CRITICAL=-50
YIELD_STEEPENING_HIGH=25

# Credit spread thresholds (percentile)
CREDIT_PERCENTILE_HIGH=90
CREDIT_PERCENTILE_CRITICAL=95

# Economic surprise threshold (percentage miss vs consensus)
ECONOMIC_SURPRISE_THRESHOLD=30
